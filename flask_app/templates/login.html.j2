{% extends "base.html.j2" %}
{% set title %}Account Login at {{ config.STORE_NAME }}{% endset %}
{% set page = 'accountlogin' %}
{% block content %}


<main class="container minheight minheight-400">
	<div class="row">
		<div class="col-12">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Home</a></li>
					<li class="breadcrumb-item active" aria-current="page">Account Login</li>
				</ol>
			</nav>
		</div>

		<div class="col-12">
			<h1 class="customer-service">Account Login</h1>
		</div>

		<div class="col-12 col-md-6">
			<div class="pt-0 pt-md-4 px-2 px-md-4">
				<div class="row m-1 mt-4 mt-md-1">
					<form data-js="user-login-form" class="w-100">

						<div class="card text-white bg-danger mb-4 error-card" style="display: none">
							<div class="card-body">
								<p class="card-text"></p>
							</div>
						</div>
            <input type="hidden" name="request" value="login" />
						<div class="form-group row">
							<div class="col-12 new-mandatory-input-wrapper">
                <input
                  type="email"
                  id="signin-email"
                  class="col-lg-12 form-control"
                  required="required"
                  name="bill_email"
                  placeholder="Your Email Address"
                  title="Please enter an e-mail address"
                  value="{{ session_safe_get('bill_email') }}"
                >
							</div>
						</div>

						<div class="form-group row">
							<div class="col-12 new-mandatory-input-wrapper">
                <input
                  type="password"
                  class="col-lg-12 form-control"
                  required="required"
                  name="bill_account_password"
                  placeholder="Enter Password"
                  title="Enter your account password"
                  autocomplete="off"
                >
							</div>
            </div>

            <div class="form-group row under-password-text">
              {#
              <span class="col-6 remember-me">
                <div class="custom-control custom-checkbox">
                  <input
                    type="checkbox"
                    name="AUTOLOGIN"
                    value="Y"
                    class="custom-control-input form-enable"
                    id="customCheckD1"
                  >
                  <label class="custom-control custom-checkbox" for="customCheckD1">Remember<span class="d-none d-sm-inline"> me</span></label>
                </div>
              </span>
              #}
              <span class="text-start col-6">
              <a href="javascript:;" onclick="showForgotPassword(event)" class="blue-link">Forgot <span class="d-none d-sm-inline">your </span>password?</a>
              </span>
            </div>

						<div class="form-group row">
							<div class="col-12 not-mandatory">
								<button
									type="submit"
									class="button-primary submit-button"
									id="login-submit"
								>
									LOG IN
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</main>

{% endblock %}
