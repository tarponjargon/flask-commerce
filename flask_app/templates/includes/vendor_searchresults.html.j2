<main class="container async-results-container">
  <div class="page-spinner" id="page-spinner">
    <div class="oc3-logo">
      <img
        src="{{ config.IMAGE_BASE }}/assets/images/loading-logo.png"
        width="300"
        height="180"
        class="img-fluid"
        alt="{{ config.STORE_NAME }} loading overlay"
      />
    </div>
    <div class="loading"></div>
  </div>
  <div class="minheight">
    <div class="row" id="async-content" style="visibility: hidden">
      <div class="col-lg-12">
        <nav class="bg-white" aria-label="breadcrumb">
          <ol class="breadcrumb mb-1 mb-xl-3">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">
              <span typeof="v:Breadcrumb"> Your Search Results </span>
            </li>
          </ol>
        </nav>
      </div>
      <div class="col-md-3">
        <div class="w-100 overflow-hidden" id="facets-container"></div>
        <div class="d-none d-md-block w-100 mt-4"></div>
      </div>
      <div class="col-md-9" id="results-container"></div>
    </div>
  </div>
</main>
