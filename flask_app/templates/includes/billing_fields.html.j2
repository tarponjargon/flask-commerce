<div class="form-group row">
	<div class="col-12 new-mandatory-input-wrapper">
		<input
			type="text"
			class="form-control"
			data-js="billing-field"
			required="required"
			aria-label="Please enter a first name"
			value="{{ session_safe_get('bill_fname') }}"
			name="bill_fname"
			id="bill_fname"
			placeholder="First Name"
		>
	</div>
</div>

<div class="form-group row">
	<div class="col-12 new-mandatory-input-wrapper">
		<input
			type="text"
			class="form-control"
			data-js="billing-field"
			required="required"
			aria-label="Please enter a last name"
			value="{{ session_safe_get('bill_lname') }}"
			name="bill_lname"
			id="bill_lname"
			placeholder="Last Name"
		>
	</div>
</div>

<div class="form-group row">
	<div class="col-12 new-mandatory-input-wrapper">
		<input
			type="text"
			class="form-control"
			data-js="billing-field"
			required="required"
			aria-label="Please enter a street address"
			value="{{ session_safe_get('bill_street') }}"
			name="bill_street"
			id="bill_street"
			placeholder="Address 1"
		>
	</div>
</div>

<div class="form-group row">
	<div class="col-12 ">
		<input
			type="text"
			class="form-control"
			data-js="billing-field"
			aria-label="address 2 (optional)"
			value="{{ session_safe_get('bill_street2') }}"
			id="bill_street2"
			name="bill_street2"
			placeholder="Address 2"
		>
	</div>
</div>

<div class="form-group row">
	<div class="col-12 new-mandatory-input-wrapper">
		<input
			type="text"
			class="form-control"
			data-js="billing-field"
			required="required"
			aria-label="Please enter a city"
			value="{{ session_safe_get('bill_city') }}"
			name="bill_city"
			id="bill_city"
			placeholder="City"
		>
	</div>
</div>

<div class="form-group row">
	<div class="col-12 new-mandatory-input-wrapper">
    <select
    id="bill_state"
    name="bill_state"
    data-js="billing-field"
    required="required"
    title="Please enter a state"
    class="form-select"
  >
      <option value="">Select State/Province</option>
      {% for state in get_states() %}
      <option
        value="{{ state.code }}"
        {{ 'selected' if session_safe_get('bill_state') == state.code else '' }}
      >
        {{ state.name }}
      </option>
    {% endfor %}
    </select>
	</div>
</div>

<div class="form-group row">
	<div class="col-12 new-mandatory-input-wrapper">
		<input
			type="text"
			class="form-control"
			data-js="billing-field"
			required="required"
			value="{{ session_safe_get('bill_postal_code') }}"
			name="bill_postal_code"
			id="bill_postal_code"
			placeholder="Zip/Postal Code"
			aria-label="Please enter a valid zip/postal code"
      pattern="^(\d{5}(-\d{4})?|[A-Z]\d[A-Z] ?\d[A-Z]\d)$"
		>
	</div>
</div>

<div class="form-group row">
	<div class="col-12 new-mandatory-input-wrapper">
    <select
    id="bill_country"
    name="bill_country"
    data-js="billing-field"
    required="required"
    title="Please enter a country"
    class="form-select"
  >
      <option value="">Select Country</option>
      {% for country in get_countries() %}
      <option
        value="{{ country.code }}"
        {{ 'selected' if session_safe_get('bill_country') == country.code else '' }}
      >
        {{ country.name }}
      </option>
    {% endfor %}
    </select>
	</div>
</div>


<div class="form-group row">
	<div class="col-12 new-mandatory-input-wrapper">
		<input
			type="text"
			class="form-control"
			data-js="billing-field"
			required="required"
			aria-label="Please enter a phone number"
			value="{{ session_safe_get('bill_phone') }}"
			name="bill_phone"
			id="bill_phone"
			placeholder="Phone"
		>
	</div>
</div>

{% if not session_safe_get('bill_email') %}
<div class="form-group row">
	<div class="col-12 new-mandatory-input-wrapper">
		<input
			type="email"
			class="form-control"
			required="required"
			aria-label="Enter a valid e-mail address"
			placeholder="E-Mail"
			name="bill_email"
			value="{{ session_safe_get('bill_email') }}"
		>
	</div>
</div>
{% endif %}